{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    // "allowImportingTsExtensions": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "declarationMap": true,
    "baseUrl": ".",
    "paths": {
      "@ekaruztech/react-social-auth": [
        "src/lib/index.ts"
      ],
      "./src/*": ["./types/*"]
    },
    "typeRoots": [
      "node_modules/@types",
      "./src/types"
    ],
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/App.tsx",
    "src/main.tsx"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}